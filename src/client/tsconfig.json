{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "../../dist/client",
    "rootDir": ".",
    "types": ["react", "react-dom"]
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "../../node_modules"]
}
