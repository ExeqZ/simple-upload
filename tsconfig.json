{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": ["src/server/**/*", "src/types/**/*"],
  "exclude": [
    "node_modules",
    "src/client",
    "**/*.spec.ts"
  ]
}